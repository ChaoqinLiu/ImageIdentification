<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_driver_license"
        android:layout_height="200dp"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars = "vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="证号"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_certificate_number"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:textIsSelectable="true"
                    android:gravity="left"/>
            </FrameLayout>

            <FrameLayout
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="姓名"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_user_name"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:textIsSelectable="true"
                    android:gravity="left"/>
            </FrameLayout>

            <FrameLayout
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="性别"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_user_gender"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:textIsSelectable="true"/>
            </FrameLayout>

            <FrameLayout
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="国籍"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_country_of_citizenship"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:textIsSelectable="true"/>
            </FrameLayout>

            <FrameLayout
                android:layout_height="wrap_content"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="住址"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_user_address"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:textIsSelectable="true"/>
            </FrameLayout>

            <FrameLayout
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="出生日期"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_date_of_birthday"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:textIsSelectable="true"/>
            </FrameLayout>

            <FrameLayout
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:text="初次领证日期"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_initial_license_date"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:textIsSelectable="true"/>
            </FrameLayout>

            <FrameLayout
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="准驾车型"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_quasi_driving_model"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:textIsSelectable="true"/>
            </FrameLayout>

            <FrameLayout
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="有效期限"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_validity_period"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:textIsSelectable="true"/>
            </FrameLayout>

            <FrameLayout
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:text="至"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="25dp"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_to"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:textIsSelectable="true"/>
            </FrameLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
