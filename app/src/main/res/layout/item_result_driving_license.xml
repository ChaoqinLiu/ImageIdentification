<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_driving_license"
        android:layout_height="200dp"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:scrollbars = "vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="号牌号码"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_number_plate_number"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:textIsSelectable="true"
                    android:gravity="left"/>
            </FrameLayout>

            <FrameLayout
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="车辆类型"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_vehicle_type"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:textIsSelectable="true"
                    android:gravity="left"/>
            </FrameLayout>

            <FrameLayout
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:text="所有人"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_owner"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:textIsSelectable="true"/>
            </FrameLayout>


            <FrameLayout
                android:layout_height="wrap_content"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="住址"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_owner_address"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:textIsSelectable="true"/>
            </FrameLayout>

            <FrameLayout
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="使用性质"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_nature_of_use"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:textIsSelectable="true"/>
            </FrameLayout>

            <FrameLayout
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="品牌型号"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_brand_model_number"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:textIsSelectable="true"/>
            </FrameLayout>

            <FrameLayout
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="发动机号码"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_engine_number"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:textIsSelectable="true"/>
            </FrameLayout>

            <FrameLayout
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:text="车辆识别代号"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_vehicle_identification_number"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:textIsSelectable="true"/>
            </FrameLayout>

            <FrameLayout
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="注册日期"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_registration_date"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:textIsSelectable="true"/>
            </FrameLayout>

            <FrameLayout
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="发证日期"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_issuing_certificate_of_date"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:textIsSelectable="true"/>
            </FrameLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
