<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.example.sqlbrite.ui.MarqueeTextView
        android:id="@+id/tvMarqueeOne"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:ellipsize="marquee"
        android:focusable="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/DeepSkyBlue"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:padding="20dp"
        android:singleLine="true"
        android:text="温馨提示，点击进入拍照识别模式，长击进入相册选择识别模式！" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_image"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:textSize="40sp"
                        android:layout_gravity="center"
                        android:gravity="center|bottom"
                        android:layout_weight="1"
                        android:textColor="@color/doderBlue"
                        android:text="@string/str_image"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:gravity="center|top"
                        android:layout_weight="2"
                        android:textSize="13sp"
                        android:text="图像识别" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="90dp"
                    android:background="@color/LightGrey"/>

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_tx"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:textSize="40sp"
                        android:layout_gravity="center"
                        android:gravity="center|bottom"
                        android:layout_weight="1"
                        android:textColor="@color/doderBlue"
                        android:text="@string/str_text"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center|top"
                        android:layout_weight="2"
                        android:textSize="13sp"
                        android:text="图文识别" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/LightGrey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_driving_license"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:textSize="40sp"
                        android:layout_gravity="center"
                        android:gravity="center|bottom"
                        android:layout_weight="1"
                        android:textColor="@color/doderBlue"
                        android:text="@string/str_DrivingLicense"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:gravity="center|top"
                        android:layout_weight="2"
                        android:textSize="13sp"
                        android:text="行驶证识别" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="90dp"
                    android:background="@color/LightGrey"/>

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_id_card"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:textSize="40sp"
                        android:layout_gravity="center"
                        android:gravity="center|bottom"
                        android:layout_weight="1"
                        android:textColor="@color/doderBlue"
                        android:text="@string/str_IDCard"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center|top"
                        android:layout_weight="2"
                        android:textSize="13sp"
                        android:text="身份证识别" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/LightGrey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_business_license"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:textSize="34sp"
                        android:layout_gravity="center"
                        android:gravity="center|bottom"
                        android:layout_weight="1"
                        android:textColor="@color/doderBlue"
                        android:text="@string/str_BusinessLicense"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:gravity="center|top"
                        android:layout_weight="2"
                        android:textSize="13sp"
                        android:text="营业执照识别" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="90dp"
                    android:background="@color/LightGrey"/>

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_bank_card"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:textSize="40sp"
                        android:layout_gravity="center"
                        android:gravity="center|bottom"
                        android:layout_weight="1"
                        android:textColor="@color/doderBlue"
                        android:text="@string/str_BankCard"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center|top"
                        android:layout_weight="2"
                        android:textSize="13sp"
                        android:text="银行卡识别" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/LightGrey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_driver_license"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:textSize="40sp"
                        android:layout_gravity="center"
                        android:gravity="center|bottom"
                        android:layout_weight="1"
                        android:textColor="@color/doderBlue"
                        android:text="@string/str_DriverLicense"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:gravity="center|top"
                        android:layout_weight="2"
                        android:textSize="13sp"
                        android:text="驾驶证识别" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="90dp"
                    android:background="@color/LightGrey"/>

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_license_plate"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:textSize="28sp"
                        android:layout_gravity="center"
                        android:gravity="center|bottom"
                        android:layout_weight="1"
                        android:textColor="@color/doderBlue"
                        android:text="@string/str_LicensePlate"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center|top"
                        android:layout_weight="2"
                        android:textSize="13sp"
                        android:text="车牌识别" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/LightGrey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_passport"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:textSize="36sp"
                        android:layout_gravity="center"
                        android:gravity="center|bottom"
                        android:layout_weight="1"
                        android:textColor="@color/doderBlue"
                        android:text="@string/str_Passport"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:gravity="center|top"
                        android:layout_weight="2"
                        android:textSize="13sp"
                        android:text="护照识别" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="90dp"
                    android:background="@color/LightGrey"/>

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_train_ticket"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:textSize="45sp"
                        android:layout_gravity="center"
                        android:gravity="center|bottom"
                        android:layout_weight="1"
                        android:textColor="@color/doderBlue"
                        android:text="@string/str_TrainTicket"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center|top"
                        android:layout_weight="2"
                        android:textSize="13sp"
                        android:text="火车票识别" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/realtabcontent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- 碎片标签栏的id必须是@android:id/tabhost -->
        <android.support.v4.app.FragmentTabHost
            android:id="@android:id/tabhost"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tabbar_height">

            <!-- 这是例行公事的选项内容，实际看不到 -->
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0" />
        </android.support.v4.app.FragmentTabHost>

    </LinearLayout>


</LinearLayout>
