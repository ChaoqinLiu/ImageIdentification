<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_train_ticket"
        android:layout_height="189dp"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars = "vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:text="始发站"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_starting_station"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:textIsSelectable="true"
                    android:gravity="left"/>
            </FrameLayout>

            <FrameLayout
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:text="到达站"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_destination_station"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:textIsSelectable="true"
                    android:gravity="left"/>
            </FrameLayout>

            <FrameLayout
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="出发日期"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_departure_date"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:textIsSelectable="true"/>
            </FrameLayout>

            <FrameLayout
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="席别"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_seat_category"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:textIsSelectable="true"/>
            </FrameLayout>

            <FrameLayout
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="乘客姓名"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_passenger_name"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:textIsSelectable="true"/>
            </FrameLayout>

            <FrameLayout
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="车票金额"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_ticket_rates"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:textIsSelectable="true"/>
            </FrameLayout>

            <FrameLayout
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:text="车票号"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_ticket_num"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:textIsSelectable="true"/>
            </FrameLayout>

            <FrameLayout
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:text="车次号"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/text_train_num"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:textIsSelectable="true"/>
            </FrameLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
